---
import Layout from '../layouts/Layout.astro';
import Scene3D from '../components/Scene3D.astro';
---

<Layout title="3D Artist Portfolio">
  <Scene3D />
  <nav class="fixed top-0 w-full p-6 z-10">
    <ul class="flex justify-center space-x-8">
      <li>
        <a href="#home" class="nav-link text-white hover:text-purple-400 transition-all transform hover:scale-110 active:scale-95">
          Home
        </a>
      </li>
      <li>
        <a href="#work" class="nav-link text-white hover:text-purple-400 transition-all transform hover:scale-110 active:scale-95">
          Work
        </a>
      </li>
      <li>
        <a href="#about" class="nav-link text-white hover:text-purple-400 transition-all transform hover:scale-110 active:scale-95">
          About
        </a>
      </li>
      <li>
        <a href="#contact" class="nav-link text-white hover:text-purple-400 transition-all transform hover:scale-110 active:scale-95">
          Contact
        </a>
      </li>
    </ul>
  </nav>
</Layout>

<style>
  nav {
    background: linear-gradient(to bottom, rgba(0,0,0,0.5), transparent);
  }

  .nav-link {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 500;
  }
</style>